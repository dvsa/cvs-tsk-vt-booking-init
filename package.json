{
  "name": "cvs-tsk-vt-booking-init",
  "version": "1.1.0",
  "description": "Lambdas for sending vehicle test bookings to eventbridge from Dynamics CE and test-results DynamoDB",
  "main": "handler.js",
  "scripts": {
    "start": "sls offline start",
    "build": "tsc --rootDir ./ --outDir .build --sourceMap false && npm run build:copy",
    "build:copy": "find src -type f \\( -name \"*.yml\" -or -name \"*.json\" \\) | cpio -pdm .build && find tests -type f \\( -name \"*.yml\" -or -name \"*.json\" \\)  | cpio -pdm .build",
    "test": "jest --coverage --runInBand",
    "test:ci": "jest --ci --runInBand",
    "test-i": "npm run test:integration",
    "test:integration": "BRANCH=local jest --testMatch=\"**/*.intTest.ts\"",
    "lint": "eslint '*/**/*.ts' --quiet",
    "lint:ci": "eslint '*/**/*.ts'",
    "format": "prettier --write .",
    "audit": "npm audit",
    "sonar-scanner": "npm run test && sonar-scanner",
    "security-checks": "git secrets --scan",
    "package": "mkdir ${ZIP_NAME} && cp package.json package-lock.json ${ZIP_NAME}/ && cp -r .build/src/* ${ZIP_NAME}/ && cd ${ZIP_NAME} && npm ci --production --ignore-scripts && rm package.json package-lock.json && zip -qr ../${ZIP_NAME}.zip . && cd .. && rimraf ${ZIP_NAME}",
    "prepare": "husky install",
    "tools-setup": "echo 'nothing to do for now'",
    "invoke": "sls invoke local -f vtBooking -p ./tests/resources/event.json",
    "commit-msg": "commitlint --edit",
    "pre-commit": "npm run security-checks && npm run audit && npm run format && npm run lint",
    "predeploy": "npm install && npm run prepush",
    "prepush": "npm run test && npm run build && npm run test-i"
  },
  "license": "MIT",
  "dependencies": {
    "@joi/date": "^2.1.0",
    "aws-sdk": "^2.1188.0",
    "dotenv": "^16.0.1",
    "joi": "^17.6.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@dvsa/eslint-config-ts": "^2.3.0",
    "@types/aws-lambda": "^8.10.78",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "archiver": "^5.3.0",
    "commitlint-plugin-function-rules": "^1.7.1",
    "current-git-branch": "^1.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.7.0",
    "eslint-plugin-security": "^1.5.0",
    "fs-extra": "^10.0.0",
    "husky": "^8.0.1",
    "jest": "^27.2.4",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^2.7.1",
    "serverless": "^3.21.0",
    "serverless-offline": "^9.1.4",
    "serverless-plugin-typescript": "^2.1.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": "^14.17.3"
  },
  "jestSonar": {
    "reportPath": ".reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
